{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": ["**/*.js", "**/*.ts"],
  "exclude": ["**/*.spec.*", "**/*.test.*", "**/*.config.js", "./dist/**/*"]
}
